{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test/**/*"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "module": "commonjs",
    "target": "ESnext",
    "checkJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@*": ["src/*"]
    }
  }
}